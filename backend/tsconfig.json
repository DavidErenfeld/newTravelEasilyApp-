{
  "compilerOptions": {
    "lib": ["es2015"],
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "Node",
    "outDir": "dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts"], // Include כל הקבצים בתוך תיקיית src
  "exclude": ["node_modules"] // Exclude תיקיית node_modules
}
